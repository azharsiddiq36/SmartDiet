<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformasiAplikasi">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="Tentang Aplikasi Smart Diet"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        android:id="@+id/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvinformasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="       Aplikasi SmartDiet ini merupakan aplikasi untuk menghitung nilai BMI dan angka kebutuhan kalori sesudai dengan tinggi badanm berat badanm umur, jenis kelamin, dan tingkat aktifitas.\n
        Perhitungan pada Aplikasi ini menggunakan Logika Fuzzy dengan metode Mamdani. Aplikasi ini dirancang sebagai salah satu syarat penyelesaian pendidikan pada Prodi Teknik Informatika Universitas Riau."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview" />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:id="@+id/linearlayout"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvinformasi"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:text="Nurul Nabila Maharani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_email_black_24dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:text="Email:nurulnabilam27@gmail,com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:text="Phone:(+62) 81-7017-3400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="Kembali"
        android:id="@+id/btnKembali"
        style="@style/btn_yellow_primary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout" />
</android.support.constraint.ConstraintLayout>